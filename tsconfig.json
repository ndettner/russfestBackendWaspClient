{
  "compilerOptions": {
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "outDir": "./build",
    "rootDir": "./source",
    "target": "esnext",
    "skipLibCheck": true,
    "strict": false,
    "emitDecoratorMetadata": true,
    "lib": [
      "ES2021",
      "ESNext",
      "DOM"
    ],
    "typeRoots": [
      "types",
      "node_modules/@types"
    ],
  },
  "exclude": [
    "node_modules"
  ],
}